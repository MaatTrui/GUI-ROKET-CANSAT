<Application x:Class="GUI_ROCKET_CANSAT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI_ROCKET_CANSAT"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="fontsColor" Color="White"/>
        <SolidColorBrush x:Key="borderColor" Color="#252525"/>

        <Style TargetType="Border" x:Key="borderMain">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="{StaticResource borderColor}"/>
        </Style>

        <Style TargetType="Label" x:Key="fontMain">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource fontsColor}"/>
        </Style>

        <Style TargetType="Label" x:Key="textTitle" BasedOn="{StaticResource fontMain}">
            <Setter Property="FontSize" Value="32"/>
        </Style>

        <Style TargetType="Button" x:Key="buttonMain">
            <Setter Property="Background" Value="#696969"/>
            <Setter Property="Foreground" Value="{StaticResource fontsColor}"/>
        </Style>

        <Style TargetType="Image" x:Key="imageLogo">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Application.Resources>
</Application>
